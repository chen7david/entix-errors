{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory of the source files
    "declaration": true, // Generate declaration files
    "sourceMap": false, // Disable source maps for production builds
    "removeComments": false // Remove comments in the output
  },
  "include": ["src/**/*"], // Include only source files
  "exclude": ["node_modules", "dist", "test/**/*"] // Exclude test files and other unnecessary directories
}
